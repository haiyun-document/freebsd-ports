#!/bin/sh
#
# $FreeBSD$
#

PW=%%PW%%
MYTHTVUSER=%%MYTHTVUSER%%
MYTHTVGROUP=%%MYTHTVGROUP%%

if [ "$2" = "POST-DEINSTALL" ]; then
  if ${PW} group show ${MYTHTVGROUP} 2>&1 >/dev/null; then
    ${PW} group del ${MYTHTVGROUP}
  fi

  if ${PW} user show ${MYTHTVUSER} 2>&1 >/dev/null; then
    ${PW} user del ${MYTHTVUSER} -r
  fi
fi
